#!/bin/bash

RUN_DIR=/var/vcap/sys/run/scope
LOG_DIR=/var/vcap/sys/log/scope
PIDFILE=${RUN_DIR}/probe_garden
SCOPE_GARDEN=/var/vcap/packages/scope-garden/scope-garden
SCOPE_PLUGINS_ROOT=<%= p('weave.scope.probe.plugins.root') %>

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR ${SCOPE_PLUGINS_ROOT}
    chown -R vcap:vcap $RUN_DIR $LOG_DIR ${SCOPE_PLUGINS_ROOT}

    echo $$ > $PIDFILE

    export SCOPE_HOSTNAME=`cat /var/vcap/bosh/spec.json | /var/vcap/packages/scope-jq/jq -r '.job.name + "/" + (.index | tostring)'`

    chmod +x $SCOPE_GARDEN
    exec $SCOPE_GARDEN \
      --plugins-root=${SCOPE_PLUGINS_ROOT} \
      --hostname=${SCOPE_HOSTNAME}\
      --garden.network=<%= p('weave.scope.probe.garden.network') %> \
      --garden.addr=<%= p('weave.scope.probe.garden.addr') %> \
      --garden.refresh-interval=<%= p('weave.scope.probe.garden.refresh_interval') %> \
      <% if_p('weave.scope.probe.cf.api_url', 'weave.scope.probe.cf.client_id') do |url, clientId| %> \
      --cf.api-url=<%= url %> \
      --cf.client-id=<%= clientId %> \
      --cf.client-secret=<%= p('weave.scope.probe.cf.client_secret') %> \
      --cf.refresh-interval=<%= p('weave.scope.probe.cf.refresh_interval') %> \
      <% if p('weave.scope.probe.cf.skip_ssl_verify') %> \
      --cf.skip-ssl-verify \
      <% end %> \
      <% end %> \
        >>  $LOG_DIR/probe_garden.stdout.log \
        2>> $LOG_DIR/probe_garden.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
